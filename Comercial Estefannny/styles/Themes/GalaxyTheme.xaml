<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Galaxy Theme - Space-inspired colors with cosmic gradients -->
    
    <!-- Base Colors -->
    <Color x:Key="Galaxy.Primary">#FF1B1B2F</Color>
    <Color x:Key="Galaxy.Secondary">#FF162447</Color>
    <Color x:Key="Galaxy.Accent">#FFE43F5A</Color>
    <Color x:Key="Galaxy.Background">#FF0F0F23</Color>
    <Color x:Key="Galaxy.Surface">#FF16213E</Color>
    <Color x:Key="Galaxy.OnPrimary">#FFFFFFFF</Color>
    <Color x:Key="Galaxy.OnSecondary">#FFFFFFFF</Color>
    <Color x:Key="Galaxy.OnBackground">#FFFFFFFF</Color>
    <Color x:Key="Galaxy.OnSurface">#FFFFFFFF</Color>
    
    <!-- Cosmic Colors -->
    <Color x:Key="Galaxy.Nebula1">#FF6A0572</Color>
    <Color x:Key="Galaxy.Nebula2">#FFA663CC</Color>
    <Color x:Key="Galaxy.Nebula3">#FF4FC3F7</Color>
    <Color x:Key="Galaxy.Star1">#FFFFFF9C</Color>
    <Color x:Key="Galaxy.Star2">#FFFFEB3B</Color>
    <Color x:Key="Galaxy.Planet1">#FF00BCD4</Color>
    <Color x:Key="Galaxy.Planet2">#FF9C27B0</Color>
    
    <!-- Solid Color Brushes -->
    <SolidColorBrush x:Key="Galaxy.PrimaryBrush" Color="{StaticResource Galaxy.Primary}"/>
    <SolidColorBrush x:Key="Galaxy.SecondaryBrush" Color="{StaticResource Galaxy.Secondary}"/>
    <SolidColorBrush x:Key="Galaxy.AccentBrush" Color="{StaticResource Galaxy.Accent}"/>
    <SolidColorBrush x:Key="Galaxy.BackgroundBrush" Color="{StaticResource Galaxy.Background}"/>
    <SolidColorBrush x:Key="Galaxy.SurfaceBrush" Color="{StaticResource Galaxy.Surface}"/>
    <SolidColorBrush x:Key="Galaxy.OnPrimaryBrush" Color="{StaticResource Galaxy.OnPrimary}"/>
    <SolidColorBrush x:Key="Galaxy.OnSecondaryBrush" Color="{StaticResource Galaxy.OnSecondary}"/>
    <SolidColorBrush x:Key="Galaxy.OnBackgroundBrush" Color="{StaticResource Galaxy.OnBackground}"/>
    <SolidColorBrush x:Key="Galaxy.OnSurfaceBrush" Color="{StaticResource Galaxy.OnSurface}"/>
    
    <!-- Galaxy Gradient Brushes -->
    <LinearGradientBrush x:Key="Galaxy.NebulaGradient" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Color="#FF6A0572" Offset="0"/>
        <GradientStop Color="#FFA663CC" Offset="0.5"/>
        <GradientStop Color="#FF4FC3F7" Offset="1"/>
    </LinearGradientBrush>
    
    <LinearGradientBrush x:Key="Galaxy.CosmicGradient" StartPoint="0,0" EndPoint="1,0">
        <GradientStop Color="#FF1B1B2F" Offset="0"/>
        <GradientStop Color="#FF162447" Offset="0.25"/>
        <GradientStop Color="#FF6A0572" Offset="0.5"/>
        <GradientStop Color="#FFA663CC" Offset="0.75"/>
        <GradientStop Color="#FF4FC3F7" Offset="1"/>
    </LinearGradientBrush>
    
    <LinearGradientBrush x:Key="Galaxy.ButtonGradient" StartPoint="0,0" EndPoint="0,1">
        <GradientStop Color="#FFE43F5A" Offset="0"/>
        <GradientStop Color="#FF6A0572" Offset="1"/>
    </LinearGradientBrush>
    
    <LinearGradientBrush x:Key="Galaxy.StarfieldGradient" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Color="#FF0F0F23" Offset="0"/>
        <GradientStop Color="#FF1B1B2F" Offset="0.3"/>
        <GradientStop Color="#FF162447" Offset="0.6"/>
        <GradientStop Color="#FF1B1B2F" Offset="1"/>
    </LinearGradientBrush>
    
    <LinearGradientBrush x:Key="Galaxy.PlanetGradient" StartPoint="0,0" EndPoint="1,0">
        <GradientStop Color="#FF00BCD4" Offset="0"/>
        <GradientStop Color="#FF9C27B0" Offset="0.5"/>
        <GradientStop Color="#FFE43F5A" Offset="1"/>
    </LinearGradientBrush>
    
    <!-- Radial Gradients -->
    <RadialGradientBrush x:Key="Galaxy.RadialNebula" Center="0.5,0.5" RadiusX="1" RadiusY="1">
        <GradientStop Color="#FF6A0572" Offset="0"/>
        <GradientStop Color="#FFA663CC" Offset="0.5"/>
        <GradientStop Color="#FF0F0F23" Offset="1"/>
    </RadialGradientBrush>
    
    <RadialGradientBrush x:Key="Galaxy.StarGlow" Center="0.5,0.5" RadiusX="0.8" RadiusY="0.8">
        <GradientStop Color="#FFFFFF9C" Offset="0"/>
        <GradientStop Color="#FFFFEB3B" Offset="0.3"/>
        <GradientStop Color="#00FFEB3B" Offset="1"/>
    </RadialGradientBrush>
    
    <!-- Glow Effect Brushes -->
    <LinearGradientBrush x:Key="Galaxy.GlowEffect" StartPoint="0,0" EndPoint="0,1">
        <GradientStop Color="#88A663CC" Offset="0"/>
        <GradientStop Color="#44A663CC" Offset="0.5"/>
        <GradientStop Color="#22A663CC" Offset="1"/>
    </LinearGradientBrush>
    
    <!-- Shadow Brushes -->
    <SolidColorBrush x:Key="Galaxy.GlowShadowBrush" Color="#66A663CC"/>
    <SolidColorBrush x:Key="Galaxy.DeepShadowBrush" Color="#AA000000"/>

</ResourceDictionary>
