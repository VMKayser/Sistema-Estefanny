<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <!-- =============================================== -->
    <!-- VIBRANT THEME - PALETA DE COLORES VIBRANTES   -->
    <!-- REGLA 60-30-10 CON GRADIENTES ESPECTACULARES  -->
    <!-- =============================================== -->
    
    <!-- =============================================== -->
    <!-- BASE COLORS (60%) - Fondos principales        -->
    <!-- =============================================== -->
    
    <!-- Fondo principal de la aplicación -->
    <LinearGradientBrush x:Key="VibrantMainBackground" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Color="#FEFEFE" Offset="0"/>
        <GradientStop Color="#FCE4EC" Offset="0.3"/>
        <GradientStop Color="#FAFAFA" Offset="0.7"/>
        <GradientStop Color="#F8BBD9" Offset="1"/>
    </LinearGradientBrush>
    
    <!-- Fondo de contenido principal -->
    <LinearGradientBrush x:Key="VibrantContentBackground" StartPoint="0,0" EndPoint="0,1">
        <GradientStop Color="#FEFEFE" Offset="0"/>
        <GradientStop Color="#FCE4EC" Offset="1"/>
    </LinearGradientBrush>
    
    <!-- =============================================== -->
    <!-- SUPPORT COLORS (30%) - Paneles y navegación   -->
    <!-- =============================================== -->
    
    <!-- Panel lateral con gradiente suave -->
    <LinearGradientBrush x:Key="VibrantSidebarBackground" StartPoint="0,0" EndPoint="1,0">
        <GradientStop Color="#F8BBD9" Offset="0"/>
        <GradientStop Color="#F48FB1" Offset="0.5"/>
        <GradientStop Color="#F06292" Offset="1"/>
    </LinearGradientBrush>
    
    <!-- Header principal -->
    <LinearGradientBrush x:Key="VibrantHeaderBackground" StartPoint="0,0" EndPoint="1,0">
        <GradientStop Color="#FF6B75" Offset="0"/>
        <GradientStop Color="#E91E63" Offset="0.3"/>
        <GradientStop Color="#F48FB1" Offset="0.7"/>
        <GradientStop Color="#F8BBD9" Offset="1"/>
    </LinearGradientBrush>
    
    <!-- Cards y containers -->
    <LinearGradientBrush x:Key="VibrantCardBackground" StartPoint="0,0" EndPoint="0,1">
        <GradientStop Color="#FFFFFF" Offset="0"/>
        <GradientStop Color="#FCE4EC" Offset="0.8"/>
        <GradientStop Color="#F8BBD9" Offset="1"/>
    </LinearGradientBrush>
    
    <!-- =============================================== -->
    <!-- ACCENT COLORS (10%) - Botones y destacados    -->
    <!-- =============================================== -->
    
    <!-- Botón primario - Fresa gradient -->
    <LinearGradientBrush x:Key="VibrantPrimaryButton" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Color="#FF6B75" Offset="0"/>
        <GradientStop Color="#FF8A80" Offset="0.5"/>
        <GradientStop Color="#FFAB91" Offset="1"/>
    </LinearGradientBrush>
    
    <!-- Botón secundario - Magenta gradient -->
    <LinearGradientBrush x:Key="VibrantSecondaryButton" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Color="#E91E63" Offset="0"/>
        <GradientStop Color="#E040FB" Offset="0.7"/>
        <GradientStop Color="#AB47BC" Offset="1"/>
    </LinearGradientBrush>
    
    <!-- Botón de éxito - Turquesa gradient -->
    <LinearGradientBrush x:Key="VibrantSuccessButton" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Color="#1DE9B6" Offset="0"/>
        <GradientStop Color="#4CAF50" Offset="0.6"/>
        <GradientStop Color="#8BC34A" Offset="1"/>
    </LinearGradientBrush>
    
    <!-- Botón de información - Azul gradient -->
    <LinearGradientBrush x:Key="VibrantInfoButton" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Color="#2196F3" Offset="0"/>
        <GradientStop Color="#64B5F6" Offset="0.5"/>
        <GradientStop Color="#90CAF9" Offset="1"/>
    </LinearGradientBrush>
    
    <!-- Botón de advertencia - Amarillo gradient -->
    <LinearGradientBrush x:Key="VibrantWarningButton" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Color="#FFEB3B" Offset="0"/>
        <GradientStop Color="#FFD54F" Offset="0.5"/>
        <GradientStop Color="#FFCC02" Offset="1"/>
    </LinearGradientBrush>
    
    <!-- =============================================== -->
    <!-- EFECTOS ESPECIALES Y GLOW                     -->
    <!-- =============================================== -->
    
    <!-- Glow effect para elementos activos -->
    <RadialGradientBrush x:Key="VibrantGlowEffect" Center="0.5,0.5" RadiusX="2" RadiusY="2">
        <GradientStop Color="#40FF6B75" Offset="0"/>
        <GradientStop Color="#20E91E63" Offset="0.7"/>
        <GradientStop Color="#00E040FB" Offset="1"/>
    </RadialGradientBrush>
    
    <!-- Shimmer effect para loading -->
    <LinearGradientBrush x:Key="VibrantShimmerEffect" StartPoint="0,0" EndPoint="1,0">
        <GradientStop Color="#00FFFFFF" Offset="0"/>
        <GradientStop Color="#80FFFFFF" Offset="0.5"/>
        <GradientStop Color="#00FFFFFF" Offset="1"/>
    </LinearGradientBrush>
    
    <!-- =============================================== -->
    <!-- HOVER Y ESTADOS INTERACTIVOS                  -->
    <!-- =============================================== -->
    
    <!-- Hover states con gradientes -->
    <LinearGradientBrush x:Key="VibrantHoverPrimary" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Color="#E91E63" Offset="0"/>
        <GradientStop Color="#FF6B75" Offset="0.5"/>
        <GradientStop Color="#FF8A80" Offset="1"/>
    </LinearGradientBrush>
    
    <LinearGradientBrush x:Key="VibrantHoverSecondary" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Color="#E040FB" Offset="0"/>
        <GradientStop Color="#AB47BC" Offset="0.5"/>
        <GradientStop Color="#673AB7" Offset="1"/>
    </LinearGradientBrush>
    
    <!-- =============================================== -->
    <!-- SOLID COLORS PARA TEXTO Y BORDES              -->
    <!-- =============================================== -->
    
    <!-- Text colors con alta legibilidad -->
    <SolidColorBrush x:Key="VibrantTextPrimary" Color="#212121"/>
    <SolidColorBrush x:Key="VibrantTextSecondary" Color="#424242"/>
    <SolidColorBrush x:Key="VibrantTextHint" Color="#9E9E9E"/>
    <SolidColorBrush x:Key="VibrantTextOnPrimary" Color="#FFFFFF"/>
    <SolidColorBrush x:Key="VibrantTextOnAccent" Color="#FFFFFF"/>
    
    <!-- Border colors -->
    <SolidColorBrush x:Key="VibrantBorderPrimary" Color="#EEEEEE"/>
    <SolidColorBrush x:Key="VibrantBorderSecondary" Color="#F48FB1"/>
    <SolidColorBrush x:Key="VibrantBorderAccent" Color="#FF6B75"/>
    <SolidColorBrush x:Key="VibrantBorderFocus" Color="#E91E63"/>
    
    <!-- =============================================== -->
    <!-- MENU Y NAVEGACIÓN ESPECÍFICOS                 -->
    <!-- =============================================== -->
    
    <!-- Menu item activo -->
    <LinearGradientBrush x:Key="VibrantMenuActiveBackground" StartPoint="0,0" EndPoint="1,0">
        <GradientStop Color="#FF6B75" Offset="0"/>
        <GradientStop Color="#E91E63" Offset="1"/>
    </LinearGradientBrush>
    
    <!-- Menu item hover -->
    <LinearGradientBrush x:Key="VibrantMenuHoverBackground" StartPoint="0,0" EndPoint="1,0">
        <GradientStop Color="#20FF6B75" Offset="0"/>
        <GradientStop Color="#20E91E63" Offset="1"/>
    </LinearGradientBrush>
    
    <!-- =============================================== -->
    <!-- THEME OVERRIDES PARA COMPATIBILIDAD           -->
    <!-- =============================================== -->
      <!-- Override main colors for theme system -->
    <SolidColorBrush x:Key="Primary" Color="#FF6B75"/>
    <SolidColorBrush x:Key="Secondary" Color="#E91E63"/>
    <SolidColorBrush x:Key="Accent" Color="#E040FB"/>
    <SolidColorBrush x:Key="Background" Color="#FEFEFE"/>
    <SolidColorBrush x:Key="Surface" Color="#FAFAFA"/>
    <SolidColorBrush x:Key="OnPrimary" Color="#FFFFFF"/>
    <SolidColorBrush x:Key="OnSecondary" Color="#FFFFFF"/>
    <SolidColorBrush x:Key="OnBackground" Color="#212121"/>
    <SolidColorBrush x:Key="OnSurface" Color="#212121"/>
    
    <!-- Legacy support -->
    <SolidColorBrush x:Key="panelColor" Color="#F48FB1"/>
    <SolidColorBrush x:Key="panelOverColor" Color="#F06292"/>
    <SolidColorBrush x:Key="panelActiveColor" Color="#FF6B75"/>
    
</ResourceDictionary>
