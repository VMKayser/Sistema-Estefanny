<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Neon Theme - Electric and vibrant colors with glowing effects -->
    
    <!-- Base Colors -->
    <Color x:Key="Neon.Primary">#FF0F3460</Color>
    <Color x:Key="Neon.Secondary">#FF16213E</Color>
    <Color x:Key="Neon.Accent">#FFFF006E</Color>
    <Color x:Key="Neon.Background">#FF0A0A0A</Color>
    <Color x:Key="Neon.Surface">#FF1A1A1A</Color>
    <Color x:Key="Neon.OnPrimary">#FFFFFFFF</Color>
    <Color x:Key="Neon.OnSecondary">#FFFFFFFF</Color>
    <Color x:Key="Neon.OnBackground">#FFFFFFFF</Color>
    <Color x:Key="Neon.OnSurface">#FFFFFFFF</Color>
    
    <!-- Neon Colors -->
    <Color x:Key="Neon.Pink">#FFFF006E</Color>
    <Color x:Key="Neon.Cyan">#FF00F5FF</Color>
    <Color x:Key="Neon.Purple">#FF7B68EE</Color>
    <Color x:Key="Neon.Green">#FF00FF7F</Color>
    <Color x:Key="Neon.Orange">#FFFF5722</Color>
    <Color x:Key="Neon.Yellow">#FFFFD700</Color>
    
    <!-- Solid Color Brushes -->
    <SolidColorBrush x:Key="Neon.PrimaryBrush" Color="{StaticResource Neon.Primary}"/>
    <SolidColorBrush x:Key="Neon.SecondaryBrush" Color="{StaticResource Neon.Secondary}"/>
    <SolidColorBrush x:Key="Neon.AccentBrush" Color="{StaticResource Neon.Accent}"/>
    <SolidColorBrush x:Key="Neon.BackgroundBrush" Color="{StaticResource Neon.Background}"/>
    <SolidColorBrush x:Key="Neon.SurfaceBrush" Color="{StaticResource Neon.Surface}"/>
    <SolidColorBrush x:Key="Neon.OnPrimaryBrush" Color="{StaticResource Neon.OnPrimary}"/>
    <SolidColorBrush x:Key="Neon.OnSecondaryBrush" Color="{StaticResource Neon.OnSecondary}"/>
    <SolidColorBrush x:Key="Neon.OnBackgroundBrush" Color="{StaticResource Neon.OnBackground}"/>
    <SolidColorBrush x:Key="Neon.OnSurfaceBrush" Color="{StaticResource Neon.OnSurface}"/>
    
    <!-- Neon Gradient Brushes -->
    <LinearGradientBrush x:Key="Neon.PinkCyanGradient" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Color="#FFFF006E" Offset="0"/>
        <GradientStop Color="#FF7B68EE" Offset="0.5"/>
        <GradientStop Color="#FF00F5FF" Offset="1"/>
    </LinearGradientBrush>
    
    <LinearGradientBrush x:Key="Neon.ElectricGradient" StartPoint="0,0" EndPoint="1,0">
        <GradientStop Color="#FFFF006E" Offset="0"/>
        <GradientStop Color="#FFFF5722" Offset="0.33"/>
        <GradientStop Color="#FFFFD700" Offset="0.66"/>
        <GradientStop Color="#FF00FF7F" Offset="1"/>
    </LinearGradientBrush>
    
    <LinearGradientBrush x:Key="Neon.ButtonGradient" StartPoint="0,0" EndPoint="0,1">
        <GradientStop Color="#FFFF006E" Offset="0"/>
        <GradientStop Color="#FF7B68EE" Offset="1"/>
    </LinearGradientBrush>
    
    <LinearGradientBrush x:Key="Neon.CyberGradient" StartPoint="0,0" EndPoint="1,0">
        <GradientStop Color="#FF0F3460" Offset="0"/>
        <GradientStop Color="#FF16213E" Offset="0.5"/>
        <GradientStop Color="#FF7B68EE" Offset="1"/>
    </LinearGradientBrush>
    
    <LinearGradientBrush x:Key="Neon.GlowGradient" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Color="#FF00F5FF" Offset="0"/>
        <GradientStop Color="#FF7B68EE" Offset="0.5"/>
        <GradientStop Color="#FFFF006E" Offset="1"/>
    </LinearGradientBrush>
    
    <!-- Radial Gradients -->
    <RadialGradientBrush x:Key="Neon.RadialGlow" Center="0.5,0.5" RadiusX="1" RadiusY="1">
        <GradientStop Color="#FFFF006E" Offset="0"/>
        <GradientStop Color="#FF7B68EE" Offset="0.5"/>
        <GradientStop Color="#FF0F3460" Offset="1"/>
    </RadialGradientBrush>
    
    <!-- Glow Effect Brushes -->
    <LinearGradientBrush x:Key="Neon.GlowEffect" StartPoint="0,0" EndPoint="0,1">
        <GradientStop Color="#88FF006E" Offset="0"/>
        <GradientStop Color="#44FF006E" Offset="0.5"/>
        <GradientStop Color="#22FF006E" Offset="1"/>
    </LinearGradientBrush>
    
    <!-- Drop Shadow Brushes -->
    <SolidColorBrush x:Key="Neon.GlowShadowBrush" Color="#66FF006E"/>
    <SolidColorBrush x:Key="Neon.DarkShadowBrush" Color="#88000000"/>

</ResourceDictionary>
