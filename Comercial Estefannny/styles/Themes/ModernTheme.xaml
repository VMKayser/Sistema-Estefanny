<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <!-- =============================================== -->
    <!-- MODERN THEME CON GRADIENTES VIBRANTES         -->
    <!-- SIGUIENDO REGLA 60-30-10                      -->
    <!-- =============================================== -->
    
    <!-- BASE COLORS (60% - Material Design inspired) -->
    <Color x:Key="Primary50">#FEFEFE</Color>
    <Color x:Key="Primary100">#FAFAFA</Color>
    <Color x:Key="Primary200">#F5F5F5</Color>
    <Color x:Key="Primary300">#EEEEEE</Color>
    <Color x:Key="Primary400">#BDBDBD</Color>
    <Color x:Key="Primary500">#9E9E9E</Color>
    <Color x:Key="Primary600">#757575</Color>
    <Color x:Key="Primary700">#616161</Color>
    <Color x:Key="Primary800">#424242</Color>
    <Color x:Key="Primary900">#212121</Color>
    
    <!-- SUPPORT COLORS (30% - Paneles y navegaciÃ³n) -->
    <Color x:Key="Support50">#FCE4EC</Color>
    <Color x:Key="Support100">#F8BBD9</Color>
    <Color x:Key="Support200">#F48FB1</Color>
    <Color x:Key="Support300">#F06292</Color>
    <Color x:Key="Support400">#EC407A</Color>
    <Color x:Key="Support500">#E91E63</Color>
    
    <!-- ACCENT COLORS (10% - Destacados y botones) -->
    <Color x:Key="Accent100">#FF6B75</Color>
    <Color x:Key="Accent200">#E91E63</Color>
    <Color x:Key="Accent300">#E040FB</Color>
    <Color x:Key="Accent400">#AB47BC</Color>
    <Color x:Key="Accent500">#673AB7</Color>
    
    <!-- COMPLEMENTARY COLORS -->
    <Color x:Key="Complement100">#1DE9B6</Color>
    <Color x:Key="Complement200">#4CAF50</Color>
    <Color x:Key="Complement300">#2196F3</Color>
    <Color x:Key="Complement400">#FFEB3B</Color>
    
    <!-- =============================================== -->
    <!-- GRADIENTES PRINCIPALES                         -->
    <!-- =============================================== -->
    
    <!-- FONDO PRINCIPAL (60%) -->
    <LinearGradientBrush x:Key="MainBackgroundGradient" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Color="{StaticResource Primary50}" Offset="0"/>
        <GradientStop Color="{StaticResource Support50}" Offset="0.3"/>
        <GradientStop Color="{StaticResource Primary100}" Offset="0.7"/>
        <GradientStop Color="{StaticResource Support100}" Offset="1"/>
    </LinearGradientBrush>
    
    <!-- PANELES LATERALES (30%) -->
    <LinearGradientBrush x:Key="SidebarGradient" StartPoint="0,0" EndPoint="1,0">
        <GradientStop Color="{StaticResource Support100}" Offset="0"/>
        <GradientStop Color="{StaticResource Support200}" Offset="0.5"/>
        <GradientStop Color="{StaticResource Support300}" Offset="1"/>
    </LinearGradientBrush>
    
    <!-- BOTONES PRIMARIOS (10%) -->
    <LinearGradientBrush x:Key="PrimaryButtonGradient" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Color="{StaticResource Accent100}" Offset="0"/>
        <GradientStop Color="{StaticResource Accent200}" Offset="0.7"/>
        <GradientStop Color="{StaticResource Accent300}" Offset="1"/>
    </LinearGradientBrush>
    
    <!-- BOTONES HOVER -->
    <LinearGradientBrush x:Key="PrimaryButtonHoverGradient" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Color="{StaticResource Accent200}" Offset="0"/>
        <GradientStop Color="{StaticResource Accent300}" Offset="0.5"/>
        <GradientStop Color="{StaticResource Accent400}" Offset="1"/>
    </LinearGradientBrush>
    
    <!-- CARDS Y CONTENEDORES -->
    <LinearGradientBrush x:Key="CardGradient" StartPoint="0,0" EndPoint="0,1">
        <GradientStop Color="{StaticResource Primary50}" Offset="0"/>
        <GradientStop Color="{StaticResource Support50}" Offset="0.8"/>
        <GradientStop Color="{StaticResource Support100}" Offset="1"/>
    </LinearGradientBrush>
    
    <!-- =============================================== -->
    <!-- GRADIENTES ESPECIALES                          -->
    <!-- =============================================== -->
    
    <!-- HEADER GRADIENT -->
    <LinearGradientBrush x:Key="HeaderGradient" StartPoint="0,0" EndPoint="1,0">
        <GradientStop Color="{StaticResource Accent100}" Offset="0"/>
        <GradientStop Color="{StaticResource Accent200}" Offset="0.3"/>
        <GradientStop Color="{StaticResource Support300}" Offset="0.7"/>
        <GradientStop Color="{StaticResource Support400}" Offset="1"/>
    </LinearGradientBrush>
    
    <!-- MENU ACTIVE GRADIENT -->
    <LinearGradientBrush x:Key="MenuActiveGradient" StartPoint="0,0" EndPoint="1,0">
        <GradientStop Color="{StaticResource Accent100}" Offset="0"/>
        <GradientStop Color="{StaticResource Accent200}" Offset="1"/>
    </LinearGradientBrush>
    
    <!-- SUCCESS GRADIENT -->
    <LinearGradientBrush x:Key="SuccessGradient" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Color="{StaticResource Complement100}" Offset="0"/>
        <GradientStop Color="{StaticResource Complement200}" Offset="1"/>
    </LinearGradientBrush>
    
    <!-- INFO GRADIENT -->
    <LinearGradientBrush x:Key="InfoGradient" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Color="{StaticResource Complement300}" Offset="0"/>
        <GradientStop Color="#64B5F6" Offset="1"/>
    </LinearGradientBrush>
    
    <!-- WARNING GRADIENT -->
    <LinearGradientBrush x:Key="WarningGradient" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Color="{StaticResource Complement400}" Offset="0"/>
        <GradientStop Color="#FFD54F" Offset="1"/>
    </LinearGradientBrush>
    
    <!-- =============================================== -->
    <!-- GRADIENTES RADIALES PARA EFECTOS              -->
    <!-- =============================================== -->
    
    <!-- BUTTON FOCUS EFFECT -->
    <RadialGradientBrush x:Key="ButtonFocusGradient" Center="0.5,0.5" RadiusX="1" RadiusY="1">
        <GradientStop Color="{StaticResource Accent100}" Offset="0"/>
        <GradientStop Color="{StaticResource Accent200}" Offset="0.6"/>
        <GradientStop Color="{StaticResource Support300}" Offset="1"/>
    </RadialGradientBrush>
    
    <!-- GLOW EFFECT -->
    <RadialGradientBrush x:Key="GlowEffect" Center="0.5,0.5" RadiusX="2" RadiusY="2">
        <GradientStop Color="#40FF6B75" Offset="0"/>
        <GradientStop Color="#20E91E63" Offset="0.7"/>
        <GradientStop Color="#00E040FB" Offset="1"/>
    </RadialGradientBrush>
    
    <!-- =============================================== -->
    <!-- SOLID BRUSHES PARA TEXTOS Y BORDES            -->
    <!-- =============================================== -->
    
    <!-- Text Colors (Alta legibilidad) -->
    <SolidColorBrush x:Key="PrimaryTextBrush" Color="{StaticResource Primary900}"/>
    <SolidColorBrush x:Key="SecondaryTextBrush" Color="{StaticResource Primary700}"/>
    <SolidColorBrush x:Key="HintTextBrush" Color="{StaticResource Primary500}"/>
    <SolidColorBrush x:Key="OnPrimaryBrush" Color="{StaticResource Primary50}"/>
    <SolidColorBrush x:Key="OnAccentBrush" Color="{StaticResource Primary50}"/>
    
    <!-- Border Colors -->
    <SolidColorBrush x:Key="BorderBrush" Color="{StaticResource Primary300}"/>
    <SolidColorBrush x:Key="FocusBorderBrush" Color="{StaticResource Accent200}"/>
    <SolidColorBrush x:Key="ErrorBorderBrush" Color="#F44336"/>
    
    <!-- Surface Colors -->
    <SolidColorBrush x:Key="SurfaceBrush" Color="{StaticResource Primary50}"/>
    <SolidColorBrush x:Key="BackgroundBrush" Color="{StaticResource Primary100}"/>
    
    <!-- =============================================== -->
    <!-- THEME SPECIFIC COLORS                          -->
    <!-- =============================================== -->
    <!-- Window Colors -->
    <SolidColorBrush x:Key="WindowBackgroundBrush" Color="{StaticResource Primary100}"/>
    <SolidColorBrush x:Key="WindowBorderBrush" Color="{StaticResource Support300}"/>

    <!-- Control Colors -->
    <SolidColorBrush x:Key="ControlBackgroundBrush" Color="{StaticResource Primary200}"/>
    <SolidColorBrush x:Key="ControlBorderBrush" Color="{StaticResource Primary300}"/>

    <!-- Interactive States -->
    <SolidColorBrush x:Key="HoverBrush" Color="#20000000"/>
    <SolidColorBrush x:Key="PressedBrush" Color="#30000000"/>
    <SolidColorBrush x:Key="DisabledBrush" Color="{StaticResource Primary400}"/>
    
    <!-- =============================================== -->
    <!-- COMPATIBILITY WITH EXISTING RESOURCES         -->
    <!-- =============================================== -->
    
    <!-- Eliminar clave duplicada Accent400 para evitar conflicto con ModernTheme.xaml -->
    <!-- <Color x:Key="Accent400">#FFB74D</Color> -->
    
    <!-- Eliminar claves duplicadas para evitar conflicto en los diccionarios fusionados -->
    <!-- <Color x:Key="Accent500">#FFA726</Color> -->
    <!-- <SolidColorBrush x:Key="PrimaryTextBrush" Color="#212121"/> -->
    <!-- <SolidColorBrush x:Key="SecondaryTextBrush" Color="#757575"/> -->
    <!-- <SolidColorBrush x:Key="HintTextBrush" Color="#BDBDBD"/> -->
    <!-- <SolidColorBrush x:Key="OnAccentBrush" Color="White"/> -->
    
    <Color x:Key="Accent600">#FF9800</Color>
    <Color x:Key="Accent700">#FB8C00</Color>
    <Color x:Key="Accent800">#F57C00</Color>
    <Color x:Key="Accent900">#E65100</Color>
    
    <!-- Neutral Color Palette -->
    <Color x:Key="Neutral50">#FAFAFA</Color>
    <Color x:Key="Neutral100">#F5F5F5</Color>
    <Color x:Key="Neutral200">#EEEEEE</Color>
    <Color x:Key="Neutral300">#E0E0E0</Color>
    <Color x:Key="Neutral400">#BDBDBD</Color>
    <Color x:Key="Neutral500">#9E9E9E</Color>
    <Color x:Key="Neutral600">#757575</Color>
    <Color x:Key="Neutral700">#616161</Color>
    <Color x:Key="Neutral800">#424242</Color>
    <Color x:Key="Neutral900">#212121</Color>
    
    <!-- Success/Error/Warning Colors -->
    <Color x:Key="Success">#4CAF50</Color>
    <Color x:Key="Error">#F44336</Color>
    <Color x:Key="Warning">#FF9800</Color>
    <Color x:Key="Info">#2196F3</Color>
      <!-- Gradient Brushes -->
    <LinearGradientBrush x:Key="PrimaryGradient" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Color="#66BB6A" Offset="0"/>
        <GradientStop Color="#388E3C" Offset="1"/>
    </LinearGradientBrush>
    
    <LinearGradientBrush x:Key="SecondaryGradient" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Color="#42A5F5" Offset="0"/>
        <GradientStop Color="#1976D2" Offset="1"/>
    </LinearGradientBrush>
      <LinearGradientBrush x:Key="AccentGradient" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Color="#FFB74D" Offset="0"/>
        <GradientStop Color="#F57C00" Offset="1"/>
    </LinearGradientBrush>
    
    <LinearGradientBrush x:Key="NeutralGradient" StartPoint="0,0" EndPoint="0,1">
        <GradientStop Color="#F5F5F5" Offset="0"/>
        <GradientStop Color="#EEEEEE" Offset="1"/>
    </LinearGradientBrush>
      <RadialGradientBrush x:Key="PrimaryRadialGradient" Center="0.5,0.5" RadiusX="1" RadiusY="1">
        <GradientStop Color="#81C784" Offset="0"/>
        <GradientStop Color="#388E3C" Offset="1"/>
    </RadialGradientBrush>
    
    <!-- Background Gradients -->
    <LinearGradientBrush x:Key="WindowBackgroundGradient" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Color="#F8F9FA" Offset="0"/>
        <GradientStop Color="#E9ECEF" Offset="1"/>
    </LinearGradientBrush>
      <LinearGradientBrush x:Key="PanelBackgroundGradient" StartPoint="0,0" EndPoint="0,1">
        <GradientStop Color="White" Offset="0"/>
        <GradientStop Color="#FAFAFA" Offset="1"/>
    </LinearGradientBrush>
      <!-- Solid Color Brushes -->
    <SolidColorBrush x:Key="PrimaryBrush" Color="#4CAF50"/>
    <SolidColorBrush x:Key="SecondaryBrush" Color="#2196F3"/>
    <SolidColorBrush x:Key="AccentBrush" Color="#FF9800"/>    <SolidColorBrush x:Key="SuccessBrush" Color="#4CAF50"/>
    <SolidColorBrush x:Key="ErrorBrush" Color="#F44336"/>
    <SolidColorBrush x:Key="WarningBrush" Color="#FF9800"/>
    <SolidColorBrush x:Key="InfoBrush" Color="#2196F3"/>
      <!-- Text Colors -->
    <SolidColorBrush x:Key="WhiteTextBrush" Color="White"/>
    
    <!-- Modern Theme Aliases for MasterStyles.xaml compatibility -->
    <Color x:Key="Modern.Primary">#4CAF50</Color>
    <Color x:Key="Modern.Secondary">#2196F3</Color>
    <Color x:Key="Modern.Accent">#FF9800</Color>
    <Color x:Key="Modern.Background">#FAFAFA</Color>
    <Color x:Key="Modern.Surface">White</Color>
    <Color x:Key="Modern.OnPrimary">White</Color>
    <Color x:Key="Modern.OnSecondary">White</Color>
    <Color x:Key="Modern.OnBackground">#212121</Color>
    <Color x:Key="Modern.OnSurface">#212121</Color>
    
    <!-- Additional Resources for MasterStyles.xaml compatibility -->
    <CornerRadius x:Key="CornerRadius">8</CornerRadius>
    
</ResourceDictionary>
