<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Nature Theme - Earth tones and natural gradients -->
    
    <!-- Base Colors -->
    <Color x:Key="Nature.Primary">#FF2D5016</Color>
    <Color x:Key="Nature.Secondary">#FF4A7C59</Color>
    <Color x:Key="Nature.Accent">#FF8FBC8F</Color>
    <Color x:Key="Nature.Background">#FFF5F5DC</Color>
    <Color x:Key="Nature.Surface">#FFFAF8F3</Color>
    <Color x:Key="Nature.OnPrimary">#FFFFFFFF</Color>
    <Color x:Key="Nature.OnSecondary">#FFFFFFFF</Color>
    <Color x:Key="Nature.OnBackground">#FF2D5016</Color>
    <Color x:Key="Nature.OnSurface">#FF2D5016</Color>
    
    <!-- Earth Tone Colors -->
    <Color x:Key="Nature.ForestGreen">#FF228B22</Color>
    <Color x:Key="Nature.EarthBrown">#FF8B4513</Color>
    <Color x:Key="Nature.SkyBlue">#FF87CEEB</Color>
    <Color x:Key="Nature.SunYellow">#FFFFD700</Color>
    <Color x:Key="Nature.FlowerPink">#FFFFC0CB</Color>
    <Color x:Key="Nature.StoneGray">#FF708090</Color>
    
    <!-- Solid Color Brushes -->
    <SolidColorBrush x:Key="Nature.PrimaryBrush" Color="{StaticResource Nature.Primary}"/>
    <SolidColorBrush x:Key="Nature.SecondaryBrush" Color="{StaticResource Nature.Secondary}"/>
    <SolidColorBrush x:Key="Nature.AccentBrush" Color="{StaticResource Nature.Accent}"/>
    <SolidColorBrush x:Key="Nature.BackgroundBrush" Color="{StaticResource Nature.Background}"/>
    <SolidColorBrush x:Key="Nature.SurfaceBrush" Color="{StaticResource Nature.Surface}"/>
    <SolidColorBrush x:Key="Nature.OnPrimaryBrush" Color="{StaticResource Nature.OnPrimary}"/>
    <SolidColorBrush x:Key="Nature.OnSecondaryBrush" Color="{StaticResource Nature.OnSecondary}"/>
    <SolidColorBrush x:Key="Nature.OnBackgroundBrush" Color="{StaticResource Nature.OnBackground}"/>
    <SolidColorBrush x:Key="Nature.OnSurfaceBrush" Color="{StaticResource Nature.OnSurface}"/>
    
    <!-- Nature Gradient Brushes -->
    <LinearGradientBrush x:Key="Nature.ForestGradient" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Color="#FF2D5016" Offset="0"/>
        <GradientStop Color="#FF4A7C59" Offset="0.5"/>
        <GradientStop Color="#FF8FBC8F" Offset="1"/>
    </LinearGradientBrush>
    
    <LinearGradientBrush x:Key="Nature.SunriseGradient" StartPoint="0,0" EndPoint="1,0">
        <GradientStop Color="#FFFFD700" Offset="0"/>
        <GradientStop Color="#FFFFA500" Offset="0.5"/>
        <GradientStop Color="#FFFF6347" Offset="1"/>
    </LinearGradientBrush>
    
    <LinearGradientBrush x:Key="Nature.SkyGradient" StartPoint="0,0" EndPoint="0,1">
        <GradientStop Color="#FF87CEEB" Offset="0"/>
        <GradientStop Color="#FF98D8E8" Offset="0.5"/>
        <GradientStop Color="#FFB0E0E6" Offset="1"/>
    </LinearGradientBrush>
    
    <LinearGradientBrush x:Key="Nature.EarthGradient" StartPoint="0,0" EndPoint="1,0">
        <GradientStop Color="#FF8B4513" Offset="0"/>
        <GradientStop Color="#FFCD853F" Offset="0.5"/>
        <GradientStop Color="#FFDAA520" Offset="1"/>
    </LinearGradientBrush>
    
    <LinearGradientBrush x:Key="Nature.ButtonGradient" StartPoint="0,0" EndPoint="0,1">
        <GradientStop Color="#FF8FBC8F" Offset="0"/>
        <GradientStop Color="#FF4A7C59" Offset="1"/>
    </LinearGradientBrush>
    
    <LinearGradientBrush x:Key="Nature.HeaderGradient" StartPoint="0,0" EndPoint="1,0">
        <GradientStop Color="#FF2D5016" Offset="0"/>
        <GradientStop Color="#FF4A7C59" Offset="0.5"/>
        <GradientStop Color="#FF228B22" Offset="1"/>
    </LinearGradientBrush>
    
    <!-- Radial Gradients -->
    <RadialGradientBrush x:Key="Nature.FlowerGradient" Center="0.5,0.5" RadiusX="1" RadiusY="1">
        <GradientStop Color="#FFFFC0CB" Offset="0"/>
        <GradientStop Color="#FFFF69B4" Offset="0.5"/>
        <GradientStop Color="#FFFF1493" Offset="1"/>
    </RadialGradientBrush>
    
    <!-- Texture Effect Brushes -->
    <LinearGradientBrush x:Key="Nature.WoodTexture" StartPoint="0,0" EndPoint="0,1">
        <GradientStop Color="#99D2691E" Offset="0"/>
        <GradientStop Color="#77CD853F" Offset="0.5"/>
        <GradientStop Color="#55DEB887" Offset="1"/>
    </LinearGradientBrush>
    
    <!-- Shadow Brushes -->
    <SolidColorBrush x:Key="Nature.ShadowBrush" Color="#44000000"/>
    <SolidColorBrush x:Key="Nature.LightShadowBrush" Color="#22000000"/>

</ResourceDictionary>
