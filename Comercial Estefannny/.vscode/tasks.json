{
  // Configuraci√≥n de tareas optimizada para C#/WPF
  "version": "2.0.0",
  "tasks": [
    {
      "label": "build",
      "command": "dotnet",
      "type": "process",
      "args": [
        "build",
        "${workspaceFolder}/Sistema Estefanny.csproj",
        "/property:GenerateFullPaths=true",
        "/consoleloggerparameters:NoSummary"
      ],
      "group": "build",
      "presentation": {
        "reveal": "silent"
      },
      "problemMatcher": "$msCompile"
    },
    {
      "label": "clean",
      "command": "dotnet", 
      "type": "process",
      "args": [
        "clean",
        "${workspaceFolder}/Sistema Estefanny.csproj"
      ],
      "group": "build",
      "presentation": {
        "reveal": "silent"
      }
    }
  ]
}
